<div class="row">
  <br />
  <div class="col-xs-3">
    <span>Plan Name</span>
  </div>
  <div class="col-xs-3">
    <input type="text" ng-model="newPlan.name" class="form-control" placeholder="Plan Name" required />
  </div>
</div>
<div class="row">
  <br />
  <div class="col-xs-3">
    <span>Plan Description</span>
  </div>
  <div class="col-xs-3">
    <input type="text" ng-model="newPlan.description" class="form-control" placeholder="Plan Description" />
  </div>
</div>
<div class="row">
  <br />
  <div class="col-xs-3">
    <span>Price in $</span>
  </div>
  <div class="col-xs-3">
    <input type="text" ng-model="newPlan.price" onkeyup="this.value=this.value.replace(/[^0-9]/g,'');" class="form-control" placeholder="Price in $" required />
  </div>
</div>
<br />
<div class="row">
  <div class="col-xs-3">
  </div>
  <div class="col-xs-3">
    <br />
    <input type="Submit" value="Add Plan" class="btn btn-primary" />
  </div>
</div>
